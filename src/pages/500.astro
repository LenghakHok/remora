---
import { ArrowLeftIcon } from "lucide-react";
import { FireFill } from "~@/icons/fire-fill";
import RootLayout from "~@/layouts/root-layout.astro";
import { cn } from "~@/lib/cn";
import { buttonVariants } from "~@/ui/button";
import {
  State,
  StateActions,
  StateDescription,
  StateIcon,
  StateTitle,
} from "~@/ui/state";

interface Props {
  error: unknown;
}

const { error } = Astro.props;
---

<RootLayout>
  <State>
    <StateIcon>
      <FireFill className="text-primary size-12" />
    </StateIcon>
    <StateTitle className="text-xl font-extrabold">
      {
        error instanceof Error && error.message
          ? error.message
          : "Internal Server Error"
      }
    </StateTitle>
    <StateDescription>
      There is a problem on our end. Stay tune! We are fixing this as soon as
      possible.
    </StateDescription>
    <StateActions>
      <a
        class={cn(
          buttonVariants({ variant: "default", size: "lg" }),
          "font-bold uppercase px-4",
        )}
        href="/"
      >
        <ArrowLeftIcon />
        <span>Take me back</span>
      </a>

      <a
        class={cn(
          buttonVariants({ variant: "outline", size: "lg" }),
          "font-bold uppercase px-4",
        )}
        href="/"
      >
        <ArrowLeftIcon />
        <span>Report Bugs</span>
      </a>
    </StateActions>
  </State>
</RootLayout>
