---
import RootLayout from "@/core/layouts/root-layout.astro";
import { cn } from "@/core/lib/cn";
import { buttonVariants } from "@/core/ui/button";
import {
State,
StateActions,
StateDescription,
StateIcon,
StateTitle,
} from "@/core/ui/state";
import { ArrowLeftIcon, HeartCrackIcon } from "lucide-react";

interface Props {
  error: unknown;
}

const { error } = Astro.props;
---

<RootLayout>
  <State>
      <StateIcon>
        <HeartCrackIcon className="size-12" />
      </StateIcon>
      <StateTitle className="text-xl font-extrabold">
        {error instanceof Error ? error.message : "Internal Server Error"}
      </StateTitle>
      <StateDescription>
        There is a problem on our end. Stay tune! We are fixing this as soon as
        possible.
      </StateDescription>
      <StateActions>
        <a
          class={cn(
            buttonVariants({ variant: "default" }),
            "font-bold uppercase",
          )}
          href="/"
        >
          <ArrowLeftIcon />
          <span>Take me back</span>
        </a>

        <a
          class={cn(
            buttonVariants({ variant: "outline" }),
            "font-bold uppercase",
          )}
          href="/"
        >
          <ArrowLeftIcon />
          <span>Report Bugs</span>
        </a>
      </StateActions>
    </State>
</RootLayout>
