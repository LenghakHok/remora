---
import { HomeSidebar } from "@@/bounded/home/modules/home-sidebar";
import HomeTopbar from "@@/bounded/home/templates/home-topbar.astro";
import RootLayout from "~@/layouts/root-layout.astro";

const pathname = Astro.originPathname;
---

<RootLayout>
  <section class="flex h-full w-full flex-row items-center justify-center">
    <!-- Sidebar -->
    <HomeSidebar pathname={pathname} client:load />

    <!-- Main Content -->
    <main
      class="relative flex size-full flex-col items-start justify-start -space-y-2 overflow-hidden p-2 pt-0"
    >
      <HomeTopbar className="relative" />
      <slot />
    </main>
  </section>
</RootLayout>
