---
import { cn } from "@/core/lib/cn";
import { Card } from "@/core/ui/card";
import type { ComponentPropsWithRef } from "react";

type Props = ComponentPropsWithRef<typeof Card> & {};

const { className, ...props } = Astro.props;
---

<Card
  className={cn(
    "relative z-10 w-full max-w-sm gap-0 border-2 border-dashed bg-transparent p-1 shadow-none",
    className,
  )}
  {...props}
>
  <slot />
</Card>
